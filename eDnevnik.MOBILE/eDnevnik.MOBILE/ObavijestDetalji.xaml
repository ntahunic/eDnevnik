<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eDnevnik.MOBILE.ObavijestDetalji">

    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="NaslovText" Text="{Binding Naslov}" FontAttributes="Bold" FontSize="Large"></Label>
            <StackLayout Orientation="Horizontal">
                <Label x:Name="DatumText" Text="{Binding Datum} " FontSize="Micro"></Label>
                <Label x:Name="PredmetText" Text="{Binding Predmet, StringFormat='{0} napisao/la'}" FontSize="Micro"></Label>
                <Label x:Name="NastavnikText" Text="{Binding Nastavnik}" FontSize="Micro" ></Label>
            </StackLayout>

            <Label x:Name="SadrzajText" Text="{Binding Sadrzaj}" FontSize="Medium"></Label>

        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>